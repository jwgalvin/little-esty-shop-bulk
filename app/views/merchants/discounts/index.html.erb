<div class="container text-center">
  <h1> Promotional Discounts here!</h1>
  <p><%= button_to "Create new promotion", "/merchants/#{@merchant.id}/discounts/new", method: :get %></p><br>

<ul class="center-col3">
  <h5> Active Promotions</h5>
<% @merchant.discounts.each do |discount|%>

<%#binding.pry%>
<li id="<%="#{discount.id}"%>"", class="left-div">Promotion name:  <%=discount.name%><br>
Quantity needed:  <%=discount.threshold%><br>
Percent off: <%=discount.percent%><br>
Visit promo page:<%= button_to "View promotion", "/merchants/#{@merchant.id}/discounts/#{discount.id}", method: :get %></li>
<%end%>
</ul>
</div>
